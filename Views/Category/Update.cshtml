@using la_mia_pizzeria_static.Models.FormData
@model Category;

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Aggiorna Categoria</h1>
            </div>
            <form asp-controller="Category" asp-action="Update" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Titolo:</strong>
                    <input asp-for="Title" class="d-block w-100" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>                
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>

            </form>
        </div>
    </div>
</div>
